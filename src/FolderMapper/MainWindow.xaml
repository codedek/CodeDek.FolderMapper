<Window x:Class="FolderMapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FolderMapper.ViewModels"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="{Binding Title}"
        MinHeight="{Binding MinHeight}"
        MinWidth="{Binding MinWidth}"
        Height="480"
        Width="720"
        Background="{Binding BackgroundColor, Mode=TwoWay}">

    <Window.DataContext>
        <local:MainViewModel x:Name="mvm" />
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground"
                    Value="#FF734546" />
            <Setter Property="FontSize"
                    Value="16" />
            <Setter Property="Padding"
                    Value="0,5" />
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   FontSize="21"
                                   Width="100"
                                   TextAlignment="Center" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground"
                    Value="#FF383838" />
            <Setter Property="Margin"
                    Value="0,5" />
            <Setter Property="Padding"
                    Value="2,5" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="0,5" />
            <Setter Property="Padding"
                    Value="13,5" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding"
                    Value="6" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
        </Style>

        <Style TargetType="ListViewItem">
            <Setter Property="Width"
                    Value="Auto" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=FieldDef.DispDetail, Mode=OneWay}"
                             Value="False">
                    <Setter Property="Visibility"
                            Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <!--<Window.Background>
        <SolidColorBrush Color="#FFF3F3F3" />
    </Window.Background>-->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="13" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="13" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="3" />
        </Grid.RowDefinitions>

        <TabControl Grid.Row="1"
                    Grid.Column="1"
                    FontSize="13"
                    FontStretch="Expanded"
                    Background="White">
            <TabItem Header="Map"
                     DataContext="{Binding MapViewModel}"
                     Background="White">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="13" />
                        <ColumnDefinition Width="65" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="13" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="13" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="13" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="1"
                               Grid.Row="1"
                               Grid.ColumnSpan="3"
                               Text="Drive Letter" />
                    <ComboBox Grid.Column="1"
                              Grid.Row="2"
                              ItemsSource="{Binding DriveLetters, ElementName=mvm}"
                              SelectedIndex="{Binding SelectedIndex, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Grid.Column="1"
                               Grid.Row="3"
                               Grid.ColumnSpan="3"
                               Text="Path to map to drive letter" />
                    <TextBox Grid.Column="1"
                             Grid.Row="4"
                             Grid.ColumnSpan="3"
                             VerticalContentAlignment="Center"
                             Text="{Binding SelectedPath, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Grid.Column="4"
                            Grid.Row="4"
                            Content="Select..."
                            Command="{Binding SelectCmd}" />
                    <Button Grid.Column="1"
                            Grid.Row="5"
                            Grid.ColumnSpan="4"
                            Content="Map"
                            Command="{Binding MapCmd}" />
                </Grid>
            </TabItem>

            <TabItem Header="Unmap"
                     DataContext="{Binding UnMapViewModel}"
                     Background="White">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="13" />
                        <ColumnDefinition Width="65" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="13" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="13" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="13" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="1"
                               Grid.Row="1"
                               Grid.ColumnSpan="3"
                               Text="Drive Letter" />
                    <ComboBox Grid.Column="1"
                              Grid.Row="2"
                              ItemsSource="{Binding DriveLetters, ElementName=mvm}"
                              SelectedIndex="{Binding SelectedIndex, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Grid.Column="2"
                            Grid.Row="2"
                            Grid.ColumnSpan="3"
                            Margin="4,0,0,0"
                            Content="Get mapped paths"
                            Command="{Binding GetMappedPathsCmd}" />
                    <TextBlock Grid.Column="1"
                               Grid.Row="4"
                               Grid.ColumnSpan="3"
                               Text="Paths mapped to drive letter" />
                    <ListBox Grid.Column="1"
                             Grid.Row="5"
                             Grid.ColumnSpan="4"
                             ItemsSource="{Binding MappedPaths, UpdateSourceTrigger=PropertyChanged}"
                             SelectedIndex="{Binding SelectedMappedPathIndex, UpdateSourceTrigger=PropertyChanged}" />

                    <Grid Grid.Column="1"
                          Grid.Row="6"
                          Grid.ColumnSpan="4"
                          Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1"
                                Content="Reset"
                                Margin="0,0,5,0"
                                Command="{Binding ResetCmd}" />
                        <Button Grid.Column="2"
                                Content="Clear Selection"
                                Margin="0"
                                Command="{Binding ClearSelectionCmd}" />
                        <Button Grid.Column="3"
                                Content="UnMap"
                                Margin="5,0,0,0"
                                Command="{Binding UnMapCmd}" />

                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="About ℹ"
                     DataContext="{Binding AboutViewModel}"
                     Background="White">
                <Grid Margin="13">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="1">
                        <Image  Source="{Binding AppIcon}"
                                Width="128"
                                HorizontalAlignment="Left"
                                Margin="13" />
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="{Binding AppName}"
                                   FontSize="21" />
                        <TextBlock Text="{Binding AppVersion}" />
                        <TextBlock Text="{Binding Copyright}" />
                        <TextBlock Text="{Binding Developer}" />
                        <TextBlock>
                            <Hyperlink Command="{Binding NavigateHomeUrlCmd}">
                                Project Home
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock>
                            <Hyperlink Command="{Binding NavigateLicenseUrlCmd}">
                                License
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock>
                            <Hyperlink Command="{Binding NavigateChangelogUrlCmd}">
                                Change log
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock>
                            <Hyperlink Command="{Binding NavigateDownloadUrlCmd}">
                                Download Latest
                            </Hyperlink>

                        </TextBlock>
                        <TextBlock>
                            <Hyperlink NavigateUri="{Binding IssuesUrl}"
                                       Command="{Binding NavigateIssuesUrlCmd}">
                                Submit Issues and Requests
                            </Hyperlink>

                        </TextBlock>

                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2"
                    Grid.Column="1"
                    Orientation="Horizontal">

            <TextBlock Text="{Binding Status, Mode=TwoWay}"
                       Foreground="{Binding StatusColor, Mode=TwoWay}" />

            <TextBlock Margin="5,0">
                    <Hyperlink Command="{Binding GoToUrlCmd}">
                        <Hyperlink.Inlines>
                            <Run Text="{Binding Passage, Mode=TwoWay}" />
                        </Hyperlink.Inlines>
                    </Hyperlink>
            </TextBlock>
        </StackPanel>

    </Grid>

</Window>
